{
  "rules": {
    "rooms": {
      "$roomCode": {
        ".read": "true",
        ".write": "true",
        "players": {
          "$playerId": {
            ".validate": "newData.hasChildren(['name', 'joinedAt'])"
          }
        },
        "gameState": {
          ".validate": "newData.hasChildren(['status', 'timer'])"
        }
      }
    }
  }
}
